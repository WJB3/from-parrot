#realtime
    background #000
    width 100%
    height 100%

#map-svg
    position absolute
    z-index 40

#realtime-summary
    z-index 60
    position absolute
    right 0
    top 30px
    width 200px
    height 100%

.summary-block
    padding-bottom 10px

.summary-title
    color white
    font-family 'Microsoft Yahei' Simhei Arial
    font-size 12px
    font-weight bold
    opacity 0.2
    text-align right
    padding-right 10px

.summary-number
    font-family 'Microsoft Yahei' Simhei Arial
    color white
    font-size 60px
    font-weight bold
    opacity 0.1
    text-align right
    padding-right 10px

.summary-number:hover
    opacity 0.5

#canvas
    position absolute
    z-index 20

#canvasOfCircles
    position absolute
    z-index 70

#shanghaiMap
    position absolute
    z-index 50

#dragHint
    position absolute
    z-index 80
    width 30px
    height 30px
    border-radius 15px
    background #666
    opacity 0.5

.mapShanghai
    stroke #ccc
    stroke-width 1
    stroke-opacity 0.7
    stroke-dasharray: 1 4
    fill none
