#side-bar
    z-index 20
    position absolute
    left 0
    top 50px
    width 100px
    height 100%
    background #151719
    overflow hidden
    /*box-shadow 1px 0 1px #222*/
    /*transition all 0.5s ease*/

.menu-option
    position relative
    width 100%
    height 100px
    font-size 12px
    color #aaa
    /*padding-top 10px
    padding-bottom 10px*/
    border-left #151719 3px solid
    text-align center

.menu-option.actived
    background #02ADD4
    /*background #264367*/
    color #eee
    opacity 0.85

.menu-option:hover
    /*background #264367*/
    background #02ADD4
    color #fff
    cursor pointer
    /*border-left #0182BC 3px solid*/
    border-left orange 2px solid


.menu-option
    .glyphicon
        display block
        font-size 32px
        /*padding-top 30px*/
        padding-bottom 5px
        /*margin-left 10px
        margin-right 10px*/

.menu-option
    .menu-label
        font-family 'Microsoft Yahei' Simhei Arial

.menuWrapper
    position absolute
    /*垂直剧中，水平不居中，水平居中left和translate都50%@@@@@@@@@@@@@@@@@@@@@@@@@@@@@*/
    top 50%
    left 50%
    transform: translate(-50%, -50%);